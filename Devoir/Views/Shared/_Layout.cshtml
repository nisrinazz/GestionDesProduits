<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/all.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
 
    </style>
</head>
<body>
    @if (@Session["user"] != null)
    {


<div class="navbar navbar-light navbar-inverse navbar-fixed-top" style="background-color:coral;">
            <div class="container">
                <div class="navbar-header">

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @if (Convert.ToString(@Session["role"]) == "ADMIN")
                        {
                            <li>
                                <a href="@Url.Action("AjouterProduit", "Produit")" style="color:white;">Ajouter produit  </a>
                            </li>
                        }

                        <li>
                            <a href="@Url.Action("ListeProduit","Produit")" style="color:white;"> Liste des produits  </a>
                        </li>

                        @if (Convert.ToString(@Session["role"]) == "ADMIN")

                        {
                            <li>
                                <a href="@Url.Action("Chercher", "Produit")" style="color:white;"> Chercher un produit </a>
                            </li>
}
                        

                        <li>
                            <a href="@Url.Action("Logout","Utilisateur")" style="color:white;"> Déconnexion  </a>
                        </li>




                    </ul>
                </div>
            </div>
        </div>
    }


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>